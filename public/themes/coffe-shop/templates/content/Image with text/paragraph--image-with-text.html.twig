
{% block paragraph %}
  <div{{ attributes }} class="image-with-text">
    {% if content.field_image %}
      {{ content.field_image }}
    {% endif %}
    <div class="image-with-text__text">
      {% if content.field_title %}
        {{ content.field_title }}
      {% endif %}
      {% if content.field_body %}
        {{ content.field_body }}
      {% endif %}
    </div>
  </div>
{% endblock paragraph %}
